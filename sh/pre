#!/usr/bin/env sh
# YES_ZSH
# YES_BASH
# YES_DASH

pre() { ### @-
    ### dump all the `#define`s that `$CC $CPPFLAGS $CFLAGS $LDFLAGS` would result in.
    ###
    ### **TODO:** restore examples.
    if [ -n "${ZSH_VERSION:-}" ]; then
        ${CC:-gcc} -dM -E - $=CPPFLAGS $=CFLAGS $=LDFLAGS < /dev/null
    else
        ${CC:-gcc} -dM -E - $CPPFLAGS $CFLAGS $LDFLAGS < /dev/null
    fi
}

[ "${SOURCING:-0}" -gt 0 ] || pre "$@"
